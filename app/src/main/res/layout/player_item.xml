<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@color/white"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Rank Number -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/item_player_rank"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/circular_button_background"
            android:gravity="center"
            tools:text="1"
            app:fontFamily="@font/avatar_air_bender"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold"
            app:cornerRadius="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Player Avatar -->
        <ImageView
            android:id="@+id/item_player_avatar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/item_player_rank"
            app:layout_constraintTop_toTopOf="parent" />

        <!--            android:src="@drawable/ic_avatar_placeholder"-->
        <!--            android:contentDescription="@string/player_avatar"-->
        <!--            android:background="@drawable/avatar_circle_background"-->

        <!-- Player Name -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/item_player_name"
            tools:text="Player Name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/avatar_air_bender"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/item_player_score"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintMarginEnd="8dp"
            app:layout_constraintMarginStart="12dp"
            app:layout_constraintStart_toEndOf="@id/item_player_avatar"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Player Score -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/item_player_score"
            tools:text="Score: 12345"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold"
            app:fontFamily="@font/avatar_air_bender"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintMarginEnd="8dp"
            app:layout_constraintMarginStart="12dp"
            app:layout_constraintStart_toEndOf="@id/item_player_avatar"
            app:layout_constraintTop_toBottomOf="@id/item_player_name" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
